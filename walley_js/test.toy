;; defun macro
;; (defun add (x y) (+ x y)
;; -> (define add (lambda (x y) (+ x y))) 
(define defun 
  (macro (func-name & rest)
    (define params (car rest))
    (define body (cdr rest))
    @(define ,func-name (lambda ,params 
                          ,body
                          )
       )
    )
  )

