;; (hash-keys test-hash) -> '(:a :b :c)
(define hash-keys 
  (lambda (hash)
    (cond
     ((eq hash '()) 
      '()
      )
     (1
      (cons 
       (car hash)
       (hash-keys
        (cdr (cdr hash))
        )
       )
      )
     )
    )
  )
;; get value according to key
(define hash-get
  (lambda (x key) 
    (cond
     ((eq x '())
      'undefined
      )
     ((eq (car x) key)
      (ref x 1)
      )
     (1
      (hash-get (cdr (cdr x)) key)
      )
     )
      )
  )
;; set hash key - value
;; ==
(define hash-set
  (lambda (x key value)
    (define hash-set-iter 
      (lambda (x x_copy key value count)
        (cond
         ;; it is empty
         ((eq x '())
          (begin
            (push x_copy key)
            (push x_copy value)
            x_copy
            )
          )
         ;; found existed key
         ((eq (car x) key)
          (set-ref! x 1 value)
          )
         (1
          (hash-set-iter
           (cdr (cdr x)) x_copy key value (+ count 1)
           )
          )
         )
        )
      )
    (hash-set-iter x x key value 0)
      )
  )
