;; (1 2) + (3 4) -> (4 6) 
(define list-add
  (lambda (x y)
    (define list-add-iter
      (lambda (x y result)
        (cond
         ((or (null? x) (null? y))
          result
          )
         (1 
            (list-add-iter (cdr x) (cdr y) (push result (apply + (list (car x) (car y)))))
          )
         )
        )
      )
    (list-add-iter x y '())
    )
  )

;; factorial
;; (factorial 3) -> 3! = 3*2*1 = 6
(define factorial 
  (lambda (n)
    (define factorial-iter
      (lambda (n result)
        (cond
         ((eq n 1) result)
         (1 (factorial-iter (- n 1) (* result n) ))
         )
        )
      )
    (factorial-iter n 1)
    )
  )

