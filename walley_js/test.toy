;; function dolist
;; (dolist var_name list body)

(define dolist
  (macro (& params)
    (define var-name (car params))
    (define iter-list (ref params 1) )
    (define body (cdr (cdr params)))     
    (append @(for ,var-name in ,iter-list) body)
    ;; @(for ,var-name in ,iter-list ,body)
    )
  )

